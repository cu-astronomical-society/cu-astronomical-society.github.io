---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
} from "astro-navbar";
import "../assets/headerfooter.css";
import { Image } from 'astro:assets';
import cuasLogo from '../assets/cuas_logo_white_on_transparent_rect.svg';
---

<header class="lg:flex p-5 gap-6 items-center full-width">
  <Astronav closeOnClick>
    <div class="flex justify-between items-center">
      <a href="/">
        <img src={cuasLogo.src} alt="CUAS Logo" class="h-15" />
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="menu-icon w-4 h-4" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex items-center lg:!block">
      <ul class="flex flex-col lg:flex-row lg:gap-5 items-center">
        <li class="flex-shrink-0"><a href="/">Home</a></li>
        <li class="flex-shrink-0">
          <Dropdown class="group">
            <button class="dropdown-button flex items-center">
              <span>About</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="dropdown-items relative whitespace-nowrap">
              <div class="absolute top-0">
                <div class="dropdown-content inline-block p-2 rounded shadow-lg whitespace-nowrap">
                  <ul class="space-y-2">
                    <li><a href="/about/" class="header-link">About CUAS</a></li>
                    <li><a href="/about/committee/" class="header-link">Committee</a></li>
                    <li><a href="/about/constitution/" class="header-link">Constitution</a></li>
                    <!-- <li><a href="/about/sponsorship/" class="header-link">Sponsorship</a></li> -->
                  </ul>
                </div>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li class="flex-shrink-0">
            <Dropdown class="group">
              <button class="dropdown-button flex items-center">
                <span>Membership</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="dropdown-items relative whitespace-nowrap">
                <div class="absolute top-0">
                  <div class="dropdown-content inline-block p-2 rounded shadow-lg whitespace-nowrap">
                    <ul class="space-y-2">
                      <li><a href="/membership/" class="header-link">About membership</a></li>
                      <!-- <li><a href="/membership/obs-demos-tests/" class="header-link">Obs tests and demos</a></li> -->
                    </ul>
                  </div>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li class="flex-shrink-0">
            <Dropdown class="group">
              <button class="dropdown-button flex items-center">
                <span>Neptune Magazine</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="dropdown-items relative whitespace-nowrap">
                <div class="absolute top-0">
                  <div class="dropdown-content inline-block p-2 rounded shadow-lg whitespace-nowrap">
                    <ul class="space-y-2">
                      <li><a href="/neptune/" class="header-link">Neptune Magazine</a></li>
                      <!-- <li><a href="/neptune/submissions/" class="header-link">Submissions</a></li> -->
                      <!-- <li><a href="/neptune/astrophotography/" class="header-link">Astrophotos</a></li> -->
                    </ul>
                  </div>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li class="flex-shrink-0">
            <Dropdown class="group">
                <button class="dropdown-button flex items-center">
                    <span>Observing</span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="3"
                      stroke="currentColor"
                      class="w-3 h-3 mt-0.5 group-open:rotate-180">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                    </svg>
                  </button>
              <DropdownItems class="dropdown-items relative whitespace-nowrap">
                <div class="absolute top-0">
                  <div class="dropdown-content inline-block p-2 rounded shadow-lg whitespace-nowrap">
                    <ul class="space-y-2">
                      <li><a href="/obs/" class="header-link">Observing at CUAS</a></li>
                      <li><a href="/obs/guides/" class="header-link">Guides</a></li>
                      <li><a href="/obs/telescopes/" class="header-link">Telescopes and equipment</a></li>
                    </ul>
                  </div>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li class="flex-shrink-0">
            <Dropdown class="group">
                <button class="dropdown-button flex items-center">
                    <span>Talks</span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="3"
                      stroke="currentColor"
                      class="w-3 h-3 mt-0.5 group-open:rotate-180">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                    </svg>
                  </button>
              <DropdownItems class="dropdown-items relative whitespace-nowrap">
                <div class="absolute top-0">
                  <div class="dropdown-content inline-block p-2 rounded shadow-lg whitespace-nowrap">
                    <ul class="space-y-2">
                      <li><a href="/talks/" class="header-link">Talks at CUAS</a></li>
                      <li><a href="/talks/upcoming" class="header-link">Upcoming talks</a></li>
                      <li><a href="/talks/previous/" class="header-link">Previous talks</a></li>
                      <li><a href="/talks/recordings/" class="header-link">Recorded talks</a></li>
                    </ul>
                  </div>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li class="flex-shrink-0"><a href="/socials/" class="header-link">Socials</a></li> 
      </ul>
    </MenuItems>
  </Astronav>
</header>