---
import { Astronav, MenuItems, MenuIcon,  Dropdown, DropdownItems, StickyHeader } from "astro-navbar";
---

<StickyHeader class="lg:flex p-5  gap-5">
  <Astronav>
    <div class="flex w-full justify-between">
      <a>Your Logo</a>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        <li>Home</li>
        <li>
          <Dropdown class="group">
            <button class="flex items-center">
              <span>About</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div class="absolute top-0">
                <ul>
                    <li>About CUAS</li>
                    <li>Committee</li>
                    <li>Constitution</li>
                    <li>Sponsorship</li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
            <Dropdown class="group">
              <button class="flex items-center">
                <span>Membership</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="absolute top-0">
                  <ul>
                      <li>About membership</li>
                      <li>Obs tests and demos</li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li>
            <Dropdown class="group">
              <button class="flex items-center">
                <span>Neptune Magazine</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="absolute top-0">
                  <ul>
                      <li>Neptune Magazine</li>
                      <li>Submissions</li>
                      <li>Astrophotography</li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li>
            <Dropdown class="group">
              <button class="flex items-center">
                <span>Observing</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="absolute top-0">
                  <ul>
                      <li>Guides</li>
                      <li>Observing</li>
                      <li>Telescopes</li>
                      <li>Resources</li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
          <li><a href="/socials/">Socials</a></li> 
      </ul>
    </MenuItems>
  </Astronav>
</StickyHeader>