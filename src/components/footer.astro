---
import "../assets/headerfooter.css";
import cuasLogo from "../assets/cuas_logo_rect_white_transparent.svg";
---
<footer class="lg:flex p-5 gap-6 items-center justify-between">
  <div class="flex justify-between items-center">
    <a href="/">
      <img src={cuasLogo.src} alt="CUAS Logo" class="h-15" />
    </a>
  </div>
