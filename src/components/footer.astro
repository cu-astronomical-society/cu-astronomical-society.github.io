    </div>
  </div> -->
</footer>

<div class="overlay" id="overlay"></div>

<script>
  // Function to refresh the image
  function refreshImage() {
    const img = document.getElementById('telescope-image');
    if (img) {
      // Add a timestamp to prevent caching
      const timestamp = new Date().getTime();
      img.src = `http://tel05.ast.cam.ac.uk/images/latest_image.jpg?t=${timestamp}`;
    }
  }

  // Set up the refresh interval (30 seconds)
  setInterval(refreshImage, 30000);
  
  // Initial load
  document.addEventListener('DOMContentLoaded', () => {
    refreshImage();
  });

  // Toggle image size on click
  const imageContainer = document.getElementById('telescope-image-container');
  const overlay = document.getElementById('overlay');

  imageContainer.addEventListener('click', function() {
    this.classList.toggle('expanded');
    overlay.classList.toggle('visible');
  });

  // Close the expanded image when clicking on the overlay
  overlay.addEventListener('click', function() {
    imageContainer.classList.remove('expanded');
    this.classList.remove('visible');
  });
</script>